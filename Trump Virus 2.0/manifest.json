{
  "manifest_version": 2,
  "name": "Trump Virus",
  "version": "1.0",
  "description": "This extensions redacts and replace the word 'trumpvirus' to Chinavirus and Coronavirus on a page.",
  "browser_action": {
  "default_icon": "icon.png",
  "default_popup": "popup.html"
  },
  "background": {
  "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
  "activeTab"
 ]
}
